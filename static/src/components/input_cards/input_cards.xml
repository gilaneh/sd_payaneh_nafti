<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="input_cards" owl="1">
        <div class="col-sm-3 m-0 p-0">
            <div class="shadow border m-2 p-4 bg-white sd_payaneh_input_cards "
                 t-on-click="props.hasOwnProperty('onClick') ? ()=>props.onClick() : ''"
                 t-attf-style=" {{props.hasOwnProperty('onClick') ? 'cursor: pointer;' : ''}}">
                <div class="text-justify text-muted">Search:</div>
                <input t-on-keydown="e=>props.onKeyDown(e)" class="form-control" type="text" value=""/>
                <button class="btn btn-primary mt-3" t-on-click="e=>props.onSubmit(e)">Open</button>
                <span class="h3 mx-2 text-muted"><span t-esc="props.status"></span></span>

                <div class="h1 fw-bold text-dark"><span t-esc="props.value"></span></div>
                <div class="h3 text-muted"><span t-esc="props.name"></span></div>
            </div>
        </div>

    </t>
</templates>