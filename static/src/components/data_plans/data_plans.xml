<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="data_plans" owl="1">
        <div class="col m-0 p-0">
            <div class="shadow border m-2 p-4 bg-white sd_payaneh_input_plans "
                 t-on-click="props.hasOwnProperty('onClick') ? ()=>props.onClick() : ''"
                 t-attf-style=" {{props.hasOwnProperty('onClick') ? 'cursor: pointer;' : ''}}">
                <div class="h3 text-muted">
                    <span t-esc="props.name"></span>
                </div>
                <div class="row mx-1 border-top border-bottom">
                    <div class="col-6">Name</div>
                    <div class="col-2">Reg No</div>
                    <div class="col-2">Plan</div>
                    <div class="col-2">Load</div>
                </div>
                <t t-foreach="props.status" t-as="row_data" t-key="row_data">
                    <div class="row mx-1 border-bottom">
                        <div class="col-6" t-esc="row_data.destination"></div>
<!--                        <div class="col-6" t-esc="row_data.buyer"></div>-->
                        <div class="col-2" t-esc="row_data.reg_no"></div>
                        <div class="col-2" t-esc="row_data.plan"></div>
                        <div class="col-2" t-esc="row_data.load"></div>
                    </div>

                </t>
            </div>
        </div>

    </t>
</templates>