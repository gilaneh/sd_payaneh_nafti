<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cargo_document_report_wizard_form" model="ir.ui.view">
            <field name="name">sd_payaneh_nafti.report.cargo_document_report.form</field>
            <field name="model">sd_payaneh_nafti.report.cargo_document_report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="document_no" options='{"no_open": True, "no_create": True}'/>
                        </group>
                        <group>
<!--                            <field name="start_date" />-->
                            <field name="calendar" invisible="context.get('lang') != 'fa_IR'"/>
                        </group>
                    </group>


                    <footer>
                        <button name="cargo_document_report" string="Generate" type="object" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="cargo_document_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Cargo Document</field>
            <field name="res_model">sd_payaneh_nafti.report.cargo_document_report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


