<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="daily_report_wizard_form" model="ir.ui.view">
            <field name="name">sd_payaneh_nafti.report.daily_report.form</field>
            <field name="model">sd_payaneh_nafti.report.daily_report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="start_date" />
                        </group>
                        <group>
<!--                            <field name="calendar" invisible="context.get('lang') != 'fa_IR'"/>-->
                        </group>
                    </group>


                    <footer>
                        <button name="daily_report" string="Generate" type="object" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="daily_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Daily Report</field>
            <field name="res_model">sd_payaneh_nafti.report.daily_report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem name="Daily Report"
                  sequence="20"
                  id="sd_payaneh_nafti_daily_report"
                  parent="sd_payaneh_nafti.reports_menu"
                  groups="sd_payaneh_nafti.group_sd_payaneh_nafti_users"
                  action="daily_report_wizard_action"/>
    </data>
</odoo>

