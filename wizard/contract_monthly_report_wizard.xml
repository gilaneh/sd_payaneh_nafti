<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="contract_monthly_report_wizard_form" model="ir.ui.view">
            <field name="name">sd_payaneh_nafti.report.contract_monthly_report.form</field>
            <field name="model">sd_payaneh_nafti.report.contract_monthly_report</field>
            <field name="arch" type="xml">
                <form js_class="contract_monthly_report_wizard">
                    <group>
                        <group>
                            <field name="loading_type" />
                            <field name="registration_no" class="registration_no_selection" options='{"no_open": True, "no_create": True}'/>
                        </group>
                    </group>
                    <group>
                        <group >
<!--                            <field name="start_date" />-->
<!--                            <field name="calendar" invisible="context.get('lang') != 'fa_IR'"/>-->
                            <label for="month" string="Month" />
                            <div class="o_row">
                                <field name="month" class="col col-lg-5" />
                                <field name="year" class="col col-lg-4"/>
                            </div>
                        </group>
                        <group>
                            <field name="days"/>
                        </group>

                    </group>


                    <footer>
                        <button name="contract_monthly_report" string="Generate" type="object" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="contract_monthly_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Contract Monthly Report</field>
            <field name="res_model">sd_payaneh_nafti.report.contract_monthly_report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem name="Contract Monthly Report"
                  sequence="60"
                  id="sd_payaneh_nafti_contract_monthly_report"
                  parent="sd_payaneh_nafti.reports_menu"
                  groups="sd_payaneh_nafti.group_sd_payaneh_nafti_users"
                  action="contract_monthly_report_wizard_action"/>
    </data>
</odoo>

