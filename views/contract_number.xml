<odoo>
    <data>

         <!-- ==================================================  sd_payaneh_nafti.contract_number ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_contract_number_list">
            <field name="name">Contract Number List</field>
            <field name="model">sd_payaneh_nafti.contract_number</field>
            <field name="arch" type="xml">
                <tree editable="bottom" delete="1" multi_edit="1" >
                    <field name="name" />
                    <field name="description" />

                </tree>
            </field>
        </record>

        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_contract_number_list_search">
            <field name="name">Contract Number Search</field>
            <field name="model">sd_payaneh_nafti.contract_number</field>
            <field name="arch" type="xml">
                <search string="contract_number">
                    <field name="name" />
                    <field name="description" />
                </search>
            </field>
        </record>


        <!-- ==================================================  Action Window ====================-->

        <record model="ir.actions.act_window" id="action_window_contract_number">
            <field name="name">Contract Number</field>
            <field name="res_model">sd_payaneh_nafti.contract_number</field>
            <field name="view_mode">tree</field>

        </record>

        <!-- ==================================================  Menu ====================-->

        <menuitem name="Contract Number"
                  sequence="200"
                  id="contract_number_menu"
                  parent="settings_menu"
                  action="action_window_contract_number"/>

<!--        <menuitem name="Actions"-->
<!--                  id="sd_payaneh_nafti.actions_setting_menu"-->
<!--                  parent="sd_payaneh_nafti.settings_menu"/>-->


    </data>
</odoo>
