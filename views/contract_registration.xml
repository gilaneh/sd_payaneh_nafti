<odoo>
    <data>

         <!-- ==================================================  sd_payaneh_nafti.contract_registration ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_contract_registration_list">
            <field name="name">Basic Registration List</field>
            <field name="model">sd_payaneh_nafti.contract_registration</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
<!--                        <button string="copy order_no" name="copy_order_no" type="object" class="btn btn-primary px2"/>-->
                    </header>
                    <field name="registration_no" class="sd_en1" />
                    <field name="contract_no" />
                    <field name="order_no" />
                    <field name="buyer" />
                    <field name="unit" />
                    <field name="amount" sum="Total" />
                    <field name="remain_amount" sum="Total"/>
                    <field name="input_count" sum="Total"/>
                    <field name="contract_type" />
                    <field name="loading_type" />
                    <field name="end_date" />
                    <field name="first_extend_end_date" />
                    <field name="second_extend_end_date" />

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sd_payaneh_nafti_contract_registration_form">
            <field name="name">Basic Registration List</field>
            <field name="model">sd_payaneh_nafti.contract_registration</field>
            <field name="arch" type="xml">
                <form js_class="remove_action_button">
                    <header>
                        <button name="create_loading_request"  string="Create Loading Request" type="object"
                                class="oe_highlight" data-hotkey="l" groups="sd_payaneh_nafti.group_sd_payaneh_nafti_operators"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button class="oe_stat_button" type="object" name="get_inputs" icon="fa-list">
                                <field string="Requests" name="input_count" widget="statinfo"/>
                            </button>
                            <button  name="get_remain_amount" class="oe_stat_button" type="object" icon="fa-archive" >
                                <field string="Remain" name="remain_amount" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="text-center bg-danger-light py-3 rounded"
                             attrs="{'invisible': [('date_validation', '=', True)]}">
                            Warning: The contract is out of date.
                        </div>
                        <div class="oe_title">
                            <label for="registration_no"/>
                            <h3><field name="registration_no" placeholder="1111" required="1"/></h3>
                        </div>
                        <group>
                            <group>
                                <field name="date_validation" invisible="1"/>
                                <label for="contract_no" />
                                <div class="o_row sd_ltr">
                                    <field name="contract_no" placeholder="Contract No"/>
                                    <div class="col-1 d-none d-lg-block" attrs="{'invisible': [('order_no', '=', '')]}">-</div>
                                    <field name="order_no" placeholder="Order No" />
                                </div>
<!--                                <field name="bill_of_lading" />-->
                                <field name="cargo_type"
                                       options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"/>
                                <field name="contract_type" />
                                <field name="loading_type" />
                            </group>
                            <group>
                                <field name="amount" />
                                <field name="unit" />
                                <field name="buyer"
                                       options="{ 'no_quick_create':True,'no_create_edit': True, 'no_open': True}" />
                                <field name="destination"
                                    options="{'no_quick_create':True,'no_create_edit': True, 'no_open': True}"/>
                                <field name="contractors" widget="many2many_tags"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"/>
<!--                                <field name="shipment_1" />-->
<!--                                <field name="shipment_2" />-->
<!--                                <field name="shipment_3" />-->
<!--                                <field name="shipment_4" />-->
<!--                                <field name="shipment_5" />-->

                            </group>
                        </group>

                        <group string="Contract Letters">
                            <group class="col-4-lg">
                                <field name="letter_no" />
                                <field name="start_date" />
                                <field name="end_date" />
                            </group>
                            <group class="col-4-lg">
                                <field name="first_extend_no" />
                                <field name="first_extend_star_date" />
                                <field name="first_extend_end_date" />
                            </group>
                            <group class="col-4-lg">
                                <field name="second_extend_no" />
                                <field name="second_extend_star_date" />
                                <field name="second_extend_end_date" />
                            </group>
                        </group>
                    </sheet>


                </form>
            </field>
        </record>

        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_contract_registration_list_search">
            <field name="name">Basic Registration List</field>
            <field name="model">sd_payaneh_nafti.contract_registration</field>
            <field name="arch" type="xml">
                <search string="Dealers">
                  <field name="registration_no" />
                    <field name="contract_no" />
                    <field name="order_no" />
                    <field name="buyer" />
                    <field name="amount" />
                    <field name="unit" />
                    <field name="contract_type" />
                    <field name="loading_type" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <filter name="live_contracts" string="Live Contracts"
                            domain="['|', '|', ('end_date', '&gt;', datetime.datetime.today()),
                                        ('first_extend_end_date', '&gt;', datetime.datetime.today()),
                                        ('second_extend_end_date', '&gt;', datetime.datetime.today()),]"/>
                    <group>
                        <filter string="Buyer" name="buyer_group" context="{'group_by': 'buyer'}"/>
                        <filter string="Contract Type" name="contract_type_group" context="{'group_by': 'contract_type'}"/>
                        <filter string="Loading Type" name="loading_type_group" context="{'group_by': 'loading_type'}"/>
                    </group>
                </search>
            </field>
        </record>


        <!-- ==================================================  Action Window ====================-->

        <record model="ir.actions.act_window" id="action_window_contract_registration">
            <field name="name">Contract Registration</field>
            <field name="res_model">sd_payaneh_nafti.contract_registration</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_live_contracts': 0,'search_default_buyer_group': 1,}</field>

        </record>

        <!-- ==================================================  Menu ====================-->

        <menuitem name="Contract Registration"
                  sequence = "10"
                  id="sd_payaneh_nafti.contract_registration_menu"
                  parent="sd_payaneh_nafti.process_menu"
                  action="action_window_contract_registration"/>

<!--        <menuitem name="Actions"-->
<!--                  id="sd_payaneh_nafti.actions_setting_menu"-->
<!--                  parent="sd_payaneh_nafti.settings_menu"/>-->


    </data>
</odoo>
