<odoo>
    <data>

         <!-- ==================================================  sd_payaneh_nafti.incident ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_incident_list">
            <field name="name">sd_payaneh_nafti List</field>
            <field name="model">sd_payaneh_nafti.incident</field>
            <field name="arch" type="xml">
                <tree editable="bottom" delete="1" >
                    <field name="old_record" invisible="1"/>
                    <field name="record_date" decoration-info="old_record" decoration-bf="old_record" />
                    <field name="project" options='{"no_open": True, "no_create": True}'/>
                    <field name="contractor" options='{"no_open": True, "no_create": True}'/>
                    <field name="record_type" />
                    <field name="reporter" />
                    <field name="medical_rest" />
                    <field name="actions" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        
        <!-- ==================================================  sd_payaneh_nafti.incident.types ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_incident_types_list">
            <field name="name">sd_payaneh_nafti List</field>
            <field name="model">sd_payaneh_nafti.incident.types</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="sequence" widget="handle" />
                    <field name="name" />

                </tree>
            </field>
        </record>
        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_incident_list_search">
            <field name="name">sd_payaneh_nafti</field>
            <field name="model">sd_payaneh_nafti.incident</field>
            <field name="arch" type="xml">
                <search string="Dealers">
<!--                    <field name="project"/>-->
<!--                    <filter string="ongoing" name="ongoing"-->
<!--                            domain="[('active_link', '=', True)]"/>-->
                </search>
            </field>
        </record>


        <!-- ==================================================  Action Window ====================-->

        <record model="ir.actions.act_window" id="action_window_incident">
            <field name="name">Incident</field>
            <field name="res_model">sd_payaneh_nafti.incident</field>
            <field name="view_mode">tree</field>
        </record>

        <record model="ir.actions.act_window" id="action_window_incident_types">
            <field name="name">Incident</field>
            <field name="res_model">sd_payaneh_nafti.incident.types</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- ==================================================  Menu ====================-->

        <menuitem name="Incident"
                  id="sd_payaneh_nafti.incident_menu"
                  parent="sd_payaneh_nafti.process_menu"
                  action="action_window_incident"/>

        <menuitem name="Incident"
                  id="sd_payaneh_nafti.incident_setting_menu"
                  parent="sd_payaneh_nafti.settings_menu"/>

        <menuitem name="Incident Types"
                  id="sd_payaneh_nafti.incident_types_menu"
                  parent="sd_payaneh_nafti.incident_setting_menu"
                  action="action_window_incident_types"/>
    </data>
</odoo>
