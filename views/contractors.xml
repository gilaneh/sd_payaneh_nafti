<odoo>
    <data>

         <!-- ==================================================  sd_payaneh_nafti.contractors ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_contractors_list">
            <field name="name">Contractors List</field>
            <field name="model">sd_payaneh_nafti.contractors</field>
            <field name="arch" type="xml">
                <tree editable="bottom" delete="1" multi_edit="1" >
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sd_payaneh_nafti_contractors_form">
            <field name="name">Contractors Form</field>
            <field name="model">sd_payaneh_nafti.contractors</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </form>
            </field>
        </record>

        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_contractors_list_search">
            <field name="name">Contractors Search</field>
            <field name="model">sd_payaneh_nafti.contractors</field>
            <field name="arch" type="xml">
                <search string="contractors">
                    <field name="name" />
                    <field name="description" />
                </search>
            </field>
        </record>


        <!-- ==================================================  Action Window ====================-->

        <record model="ir.actions.act_window" id="action_window_contractors">
            <field name="name">Contractors</field>
            <field name="res_model">sd_payaneh_nafti.contractors</field>
            <field name="view_mode">tree</field>

        </record>

        <!-- ==================================================  Menu ====================-->

        <menuitem name="Contractors"
                  sequence="30"
                  id="contractors_menu"
                  parent="settings_menu"
                  action="action_window_contractors"/>

<!--        <menuitem name="Actions"-->
<!--                  id="sd_payaneh_nafti.actions_setting_menu"-->
<!--                  parent="sd_payaneh_nafti.settings_menu"/>-->


    </data>
</odoo>
