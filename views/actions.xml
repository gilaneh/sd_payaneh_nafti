<odoo>
    <data>

         <!-- ==================================================  sd_payaneh_nafti.actions ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_actions_list">
            <field name="name">sd_payaneh_nafti List</field>
            <field name="model">sd_payaneh_nafti.actions</field>
            <field name="arch" type="xml">
                <tree editable="bottom" delete="1" multi_edit="1" >
                    <field name="description" />
                    <field name="record_date" />
                    <field name="project" options='{"no_open": True, "no_create": True}'/>

                </tree>
            </field>
        </record>

        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_actions_list_search">
            <field name="name">Actions</field>
            <field name="model">sd_payaneh_nafti.actions</field>
            <field name="arch" type="xml">
                <search string="Dealers">
                    <field name="description"/>
                    <field name="project"/>
                    <field name="record_date"/>
                    <group>
                        <filter name="group_project" string="Project" context="{'group_by': 'project'}"/>
                        <filter name="group_record_date" string="Date" context="{'group_by': 'record_date'}"/>
                    </group>

                </search>
            </field>
        </record>


        <!-- ==================================================  Action Window ====================-->

        <record model="ir.actions.act_window" id="action_window_actions">
            <field name="name">Actions</field>
            <field name="res_model">sd_payaneh_nafti.actions</field>
            <field name="view_mode">tree</field>
            <field name="domain">['|',
                                    ('project.payaneh_managers_users', 'in', uid),
                                    ('project.payaneh_officers_users', 'in', uid)]
            </field>
        </record>

        <!-- ==================================================  Menu ====================-->

        <menuitem name="Actions"
                  id="sd_payaneh_nafti.actions_menu"
                  parent="sd_payaneh_nafti.process_menu"
                  action="action_window_actions"/>

        <menuitem name="Actions"
                  id="sd_payaneh_nafti.actions_setting_menu"
                  parent="sd_payaneh_nafti.settings_menu"/>


    </data>
</odoo>
