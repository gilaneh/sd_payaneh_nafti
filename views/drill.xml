<odoo>
    <data>

         <!-- ==================================================  sd_payaneh_nafti.drill ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_drill_list">
            <field name="name">sd_payaneh_nafti List</field>
            <field name="model">sd_payaneh_nafti.drill</field>
            <field name="arch" type="xml">
                <tree editable="bottom" delete="1" >
                    <field name="record_date" />
                    <field name="project" options='{"no_open": True, "no_create": True}'/>
                    <field name="record_type"/>
                    <field name="name"/>
                    <field name="participants" widget="many2many_tags" invisible="1"/>
                    <field name="attendees"/>
                    <field name="strengths"/>
                    <field name="weaknesses"/>
                    <field name="improve_actions"/>
                </tree>
            </field>
        </record>

         <!-- ==================================================  sd_payaneh_nafti.drill.types ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_drill_types_list">
            <field name="name">Drill Types</field>
            <field name="model">sd_payaneh_nafti.drill.types</field>
            <field name="arch" type="xml">
                <tree editable="bottom" >
                    <field name="sequence" widget="handle"/>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_drill_list_search">
            <field name="name">sd_payaneh_nafti</field>
            <field name="model">sd_payaneh_nafti.drill</field>
            <field name="arch" type="xml">
                <search string="Dealers">
<!--                    <field name="project"/>-->
<!--                    <filter string="ongoing" name="ongoing"-->
<!--                            domain="[('active_link', '=', True)]"/>-->
                </search>
            </field>
        </record>


        <!-- ==================================================  Action Window ====================-->

        <record model="ir.actions.act_window" id="action_window_drill">
            <field name="name">Drill</field>
            <field name="res_model">sd_payaneh_nafti.drill</field>
            <field name="view_mode">tree</field>
            <field name="domain">['|',
                                    ('project.payaneh_managers_users', 'in', uid),
                                    ('project.payaneh_officers_users', 'in', uid)]
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_window_drill_types">
            <field name="name">Drill types</field>
            <field name="res_model">sd_payaneh_nafti.drill.types</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- ==================================================  Menu ====================-->

        <menuitem name="Drill"
                  id="sd_payaneh_nafti.drill_menu"
                  parent="sd_payaneh_nafti.process_menu"
                  action="action_window_drill"/>


        <menuitem name="Drill"
                  id="sd_payaneh_nafti.drill_setting_menu"
                  parent="sd_payaneh_nafti.settings_menu"/>

        <menuitem name="Drill Types"
                  id="sd_payaneh_nafti.drill_types_menu"
                  parent="sd_payaneh_nafti.drill_setting_menu"
                  action="sd_payaneh_nafti.action_window_drill_types"/>
    </data>
</odoo>
