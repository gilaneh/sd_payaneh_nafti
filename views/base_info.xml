<odoo>
    <data>

         <!-- ==================================================  sd_payaneh_nafti.base_info ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_base_infos_list">
            <field name="name">Basic Information List</field>
            <field name="model">sd_payaneh_nafti.base_info</field>
            <field name="arch" type="xml">
                <tree editable="bottom" delete="1" multi_edit="1" >
                    <field name="buyer" />
                    <field name="contractor" />
                    <field name="contract_no" />
                    <field name="destination" />
                    <field name="signers" />
                    <field name="description" />

                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="sd_payaneh_nafti_base_info_form">
            <field name="name">Basic Information Form</field>
            <field name="model">sd_payaneh_nafti.base_info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="buyer" />
                                <field name="contractor" />
                                <field name="contract_no" />
                                <field name="destination" />
                                <field name="signers" />
                                <field name="description" />

                            </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_base_info_list_search">
            <field name="name">Basic Information List</field>
            <field name="model">sd_payaneh_nafti.base_info</field>
            <field name="arch" type="xml">
                <search string="Dealers">
                    <field name="buyer" />
                    <field name="contractor" />
                    <field name="contract_no" />
                    <field name="destination" />
                    <field name="signers" />
                    <field name="description" />
                </search>
            </field>
        </record>


        <!-- ==================================================  Action Window ====================-->

        <record model="ir.actions.act_window" id="action_window_base_info">
            <field name="name">Base Information</field>
            <field name="res_model">sd_payaneh_nafti.base_info</field>
            <field name="view_mode">tree</field>

        </record>

