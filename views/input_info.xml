            <field name="model">sd_payaneh_nafti.input_info</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <separator string="General Information"/>
                                <field name="document_no" />
                                <field name="loading_no" />
                                <field name="loading_date" />
                                <field name="registration_no"
                                       options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"/>

                                <field name="buyer" />
                                <field name="contractors" invisible="1" />
                                <field name="contractor" domain="[('id', 'in', contractors )]"
                                       options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"/>
                                <separator string="Tanker"/>
                                <field name="driver" />
                                <field name="card_no" />

                                <label for="plate_1"/>
                                <div class="o_row text-center">
                                    <div class="col-3 px-2 border border-info rounded">
<!--                                        <div t-attrs="{'invisible': [('plate_1', '=', '')]}">58</div>-->
                                        <field name="plate_1" options="{'no_quick_create':True,'no_create_edit': True, 'no_open': True}"/>
                                    </div>
                                    <div class="o_row border border-info rounded">

                                        <div class="o_col px-2 ">
<!--                                            <div>123</div>-->
                                            <field name="plate_2" />
                                        </div>
                                        <div class="o_col">
<!--                                            <div>ن</div>-->
                                            <field name="plate_3" options="{'no_create_edit': True, 'no_open': True}"/>
                                        </div>
                                        <div class="o_col px-2 ">
<!--                                            <div>45</div>-->
                                            <field name="plate_4" />
                                        </div>
                                        <div class="o_col text-300" style="background-color: #10109f; align-self: center;">IR</div>
                                    </div>


                                </div>
                                <separator string="Container"/>
                                <field name="front_container" />
                                <field name="middle_container" />
                                <field name="back_container" />
                                <field name="total" />
                                <field name="centralized_container" />
                            </group>
                            <group>
                                <separator string="Tanker Status"/>
                                <field name="sp_gr" digits="[4,4]"/>
                                <field name="correction_factor" />

                                <field name="temperature" />
                                <field name="temperature_f" invisible="1" />
                                <field name="pressure" />
                                <field name="pressure_psi" invisible="1" />
                                <field name="meter_no" />
                                <field name="weighbridge" />
                                <field name="totalizer_start" attrs="{'invisible': [('weighbridge', '=', 'yes')]}"/>
                                <field name="totalizer_end" attrs="{'invisible': [('weighbridge', '=', 'yes')]}"/>
                                <field name="totalizer_difference" attrs="{'invisible': [('weighbridge', '=', 'yes')]}"/>
                                <field name="tanker_empty_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}"/>
                                <field name="tanker_full_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}"/>
                                <field name="tanker_pure_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}"/>
                                <separator string="Lockers"/>
                                <field name="evacuation_box_seal" />
                                <field name="compartment_1" />
                                <field name="compartment_2" />
                                <field name="compartment_3" />

                                <field name="api_box_locker" />
                                <field name="compartment_locker_1" widget="many2one" />
                                <field name="compartment_locker_2" widget="many2one" />
                                <field name="compartment_locker_3" widget="many2one" />

                            </group>


                        </group>
                        <notebook groups="base.group_system">
