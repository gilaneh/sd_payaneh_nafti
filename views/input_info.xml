        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_input_info_list_search">
            <field name="name">Input Information List</field>
            <field name="model">sd_payaneh_nafti.input_info</field>
            <field name="arch" type="xml">
                <search string="Dealers">
                    <field name="document_no" />
                    <field name="contract_no" />
                    <field name="loading_no" />
                    <field name="loading_date" />
                    <field name="registration_no" />
                    <field name="contractor" />
                    <field name="buyer" />
                    <field name="driver" />
                    <field name="truck_no" />
                    <filter string="Last Week" name="last_week" domain="[('loading_date', '&gt;=', datetime.datetime.now() - datetime.timedelta(days=7))]"/>
                    <group>
                        <filter string="Registration" name="registration_no_group" context="{'group_by': 'registration_no'}" />
                        <filter string="Buyer" name="buyer_group" context="{'group_by': 'buyer'}" />
