<odoo>
    <data>

         <!-- ==================================================  sd_payaneh_nafti.input_info ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_input_infos_list">
            <field name="name">Input Information List</field>
            <field name="model">sd_payaneh_nafti.input_info</field>
            <field name="arch" type="xml">
                <tree>

                    <field name="document_no" />
                    <field name="loading_no" />
                    <field name="loading_date" />
                    <field name="registration_no" />
                    <field name="contractor" />
                    <field name="buyer" />
                    <field name="temperature" groups="base.group_system" optional="hide"/>
                    <field name="final_tov_l" groups="base.group_system" optional="hide"/>
                    <field name="final_gsv_l" groups="base.group_system" optional="hide"/>
                    <field name="final_gsv_b" groups="base.group_system" optional="hide"/>
                    <field name="final_mt" groups="base.group_system" optional="hide"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="sd_payaneh_nafti_input_info_form">
            <field name="name">Input Information Form</field>
            <field name="model">sd_payaneh_nafti.input_info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <separator string="General Information"/>
                                <field name="document_no" />
                                <field name="loading_no" />
                                <field name="loading_date" />
                                <field name="registration_no"
                                       options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"/>

                                <field name="buyer" />
                                <field name="contractors" invisible="1" />
                                <field name="contractor" domain="[('id', 'in', contractors )]"
                                       options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"/>
                                <separator string="Tanker"/>
                                <field name="driver" />
                                <field name="card_no" />

                                <label for="plate_1"/>
                                <div class="o_row text-center">
                                    <div class="col-3 px-2 border border-info rounded">
<!--                                        <div t-attrs="{'invisible': [('plate_1', '=', '')]}">58</div>-->
                                        <field name="plate_1" options="{'no_quick_create':True,'no_create_edit': True, 'no_open': True}"/>
                                    </div>
                                    <div class="o_row border border-info rounded">

                                        <div class="o_col px-2 ">
<!--                                            <div>123</div>-->
                                            <field name="plate_2" />
                                        </div>
                                        <div class="o_col">
<!--                                            <div>Ù†</div>-->
                                            <field name="plate_3" options="{'no_create_edit': True, 'no_open': True}"/>
                                        </div>
                                        <div class="o_col px-2 ">
<!--                                            <div>45</div>-->
                                            <field name="plate_4" />
                                        </div>
                                        <div class="o_col text-300" style="background-color: #10109f; align-self: center;">IR</div>
                                    </div>


                                </div>
                                <separator string="Container"/>
                                <field name="front_container" />
                                <field name="middle_container" />
                                <field name="back_container" />
                                <field name="total" />
                                <field name="centralized_container" />
                            </group>
                            <group>
                                <separator string="Tanker Status"/>
                                <field name="sp_gr" digits="[4,4]"/>
                                <field name="correction_factor" />

                                <field name="temperature" />
                                <field name="temperature_f" invisible="1" />
                                <field name="pressure" />
                                <field name="pressure_psi" invisible="1" />
                                <field name="meter_no" />
                                <separator string="Totalizer"/>
                                <field name="totalizer_start" />
                                <field name="totalizer_end" />
                                <field name="totalizer_difference" />
                                <separator string="Weight"/>
                                <field name="weighbridge" />
                                <field name="tanker_empty_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}"/>
                                <field name="tanker_full_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}"/>
                                <field name="tanker_pure_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}"/>
                                <separator string="Sealing"/>
                                <field name="evacuation_box_seal" />
                                <field name="compartment_1" />
                                <field name="compartment_2" />
                                <field name="compartment_3" />

                            </group>


                        </group>
                        <notebook groups="base.group_system">
                            <page string="Misc">
                                <group>
                                    <group>
                                        <field name="api_a" groups="base.group_system"/>
                                        <field name="tab_13"  groups="base.group_system"/>
                                        <field name="ctl" groups="base.group_system"/>
                                        <field name="cpl" groups="base.group_system"/>

                                        <field name="meter_tov_l" groups="base.group_system"/>
                                        <field name="meter_gsv_l" groups="base.group_system"/>
                                        <field name="meter_gsv_b" groups="base.group_system"/>
                                        <field name="meter_mt" groups="base.group_system"/>

                                        <field name="wb_tov_l" groups="base.group_system"/>
                                        <field name="wb_gsv_l" groups="base.group_system"/>
                                        <field name="wb_gsv_b" groups="base.group_system"/>
                                        <field name="wb_mt" groups="base.group_system"/>

                                        <field name="final_tov_l" groups="base.group_system"/>
                                        <field name="final_gsv_l" groups="base.group_system"/>
                                        <field name="final_gsv_b" groups="base.group_system"/>
                                        <field name="final_mt" groups="base.group_system"/>

                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

         <!-- ==================================================  sd_payaneh_nafti.plate1 ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_plate1_list">
            <field name="name">Plate1 List</field>
            <field name="model">sd_payaneh_nafti.plate1</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" />
                </tree>
            </field>
        </record>


         <!-- ==================================================  sd_payaneh_nafti.plate3 ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_plate3_list">
            <field name="name">Plate3 List</field>
            <field name="model">sd_payaneh_nafti.plate3</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" />
                </tree>
            </field>
        </record>

         <!-- ==================================================  sd_payaneh_nafti.cargo_types ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_cargo_types_list">
            <field name="name">Cargo Types List</field>
            <field name="model">sd_payaneh_nafti.cargo_types</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- ==================================================  Search ====================-->

        <record model="ir.ui.view" id="sd_payaneh_nafti_input_info_list_search">
            <field name="name">Input Information List</field>
            <field name="model">sd_payaneh_nafti.input_info</field>
            <field name="arch" type="xml">
                <search string="Dealers">
                    <field name="document_no" />
                    <field name="loading_no" />
                    <field name="loading_date" />
                    <field name="registration_no" />
                    <field name="contractor" />
                    <field name="buyer" />
                </search>
            </field>
        </record>


        <!-- ==================================================  Action Window ====================-->

        <record model="ir.actions.act_window" id="action_window_input_info">
            <field name="name">Input Information</field>
            <field name="res_model">sd_payaneh_nafti.input_info</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_window_plate_1">
            <field name="name">Plate 1</field>
            <field name="res_model">sd_payaneh_nafti.plate1</field>
            <field name="view_mode">tree</field>
        </record>

        <record model="ir.actions.act_window" id="action_window_plate_3">
            <field name="name">Plate 3</field>
            <field name="res_model">sd_payaneh_nafti.plate3</field>
            <field name="view_mode">tree</field>
        </record>

        <record model="ir.actions.act_window" id="action_window_cargo_types">
            <field name="name">Cargo Types</field>
            <field name="res_model">sd_payaneh_nafti.cargo_types</field>
            <field name="view_mode">tree</field>
        </record>



        <!-- ==================================================  Menu ====================-->

        <menuitem name="Input Info"
                  id="sd_payaneh_nafti.input_info_menu"
                  parent="sd_payaneh_nafti.process_menu"
                  action="action_window_input_info"/>

        <menuitem name="Plate"
                  id="sd_payaneh_nafti.plate_menu"
                  parent="sd_payaneh_nafti.settings_menu"
                  groups="sd_payaneh_nafti.group_sd_payaneh_nafti_admins"/>

