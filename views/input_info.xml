        <menuitem name="Cargo Type"
                  id="sd_payaneh_nafti.cargo_type_menu"
                  parent="sd_payaneh_nafti.settings_menu"
                  groups="sd_payaneh_nafti.group_sd_payaneh_nafti_admins"
                    action="action_window_cargo_types"/>



    </data>
</odoo>
