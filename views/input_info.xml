        <record model="ir.ui.view" id="sd_payaneh_nafti_input_info_form_1">
            <field name="name">Input Information Form</field>
            <field name="model">sd_payaneh_nafti.input_info</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="loading_permit" states="draft" string="Loading Permit" type="object"
                                class="oe_highlight" data-hotkey="l"/>
                        <button name="print_loading_permit" states="loading_permit,loading_info" string="Print Loading Permit" type="object"
                                class="oe_highlight" />
                        <button name="loading_info" states="loading_info,cargo_document" string="Loading Info" type="object"
                                class="oe_highlight" />
                        <button name="print_cargo_document" states="cargo_document" string="Print Cargo Document" type="object"
                                class="oe_highlight" />
                        <button name="input_done" states="cargo_document" string="Done" type="object"
                                class="oe_highlight" />


                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,loading_permit,loading_info,cargo_document,done"
                               force_save="1"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button string="Contract" name="get_contract_registration" class="oe_stat_button"
                                    type="object" icon="fa-file-text-o" context="{'registration_no':registration_no}">
                            </button>
                            <button  class="oe_stat_button" icon="fa-archive">
                                <field name="remain_amount" string="Remain" class="sd_ltr" widget="statinfo" />
                            </button>
                            <button  class="oe_stat_button" icon="fa-archive">
                                <field name="remain_amount_approx" string="Approx" class="sd_ltr"
                                       widget="statinfo" decoration-danger="remain_amount_approx &lt; 0"/>
                            </button>

                        </div>
                        <div class="text-center bg-danger-light mb-2 py-2 rounded"
                             attrs="{'invisible': ['|', ('id', '>', 1),('date_validation', '=', True)]}">
                            Warning: The contract is out of date.
                        </div>
                        <div class="text-center bg-warning mb-2 py-2 rounded"
                             attrs="{'invisible': [('remain_amount_approx', '&gt;=', 0)]}">
                            Warning: Requested amount is more than approximately calculated remain amount.
                        </div>
                        <div class="text-center bg-dark mb-2 py-2 rounded"
                             attrs="{'invisible': [('driver_black_list', '=', False)]}">
                            Warning: Driver is in BLACK LIST.
                        </div>
                        <div class="text-center bg-dark-light mb-2 py-2 rounded"
                             attrs="{'invisible': [('truck_black_list', '=', False)]}">
                            Warning: Truck is in BLACK LIST.
                        </div>



                        <div class="oe_title">
                            <label for="document_no"/>
                            <h3><field name="document_no" placeholder="1111" required="1"/></h3>
                        </div>
                        <group string="General Information">
                            <group>
                                <field name="request_date" />
                                <field name="registration_no"
                                       options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"/>
                        <field name="date_validation" invisible="1"/>

                                <label for="contract_no" />
                                <div class="o_row sd_ltr">
                                    <field name="contract_no" class="mx-2"  attrs="{'invisible': [('contract_no', '=', '')]}"/>
                                    <div class="col-1" attrs="{'invisible': [('order_no', '=', '')]}">-</div>
                                    <field name="order_no" class="mx-2" attrs="{'invisible': [('order_no', '=', '')]}"/>
                                </div>

                            </group>
                            <group>
                                    <field name="buyer" options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="contractors" invisible="1" />
                                    <field name="contractor" domain="[('id', 'in', contractors )]"
                                           options="{'no_quick_create':True, 'no_create_edit': True, 'no_open': True}"
                                            />

                                </group>
                        </group>
                        <group string="Tanker">
                            <group>
                                <field name="driver" class="sd_ltr"
                                       />
<!--                                <field name="driver" class="sd_ltr black_list"-->
<!--                                       attrs="{'invisible': [('driver_black_list', '=', False)]}" />-->
                                <field name="driver_black_list" invisible="1"/>
                                <field name="card_no" />
                                <field name="truck_no" class="sd_ltr oe_edit_only"
                                        />
<!--                                <field name="truck_no" class="sd_ltr black_list"-->
<!--                                       attrs="{'invisible': [('truck_black_list', '=', False)]}" />-->
                                <field name="truck_black_list" invisible="1"/>


                                <label for="plate_1"/>
                                <div class="o_row text-center">
                                    <div class="col-3 px-2 border border-info rounded">
<!--                                        <div t-attrs="{'invisible': [('plate_1', '=', '')]}">58</div>-->
                                        <field name="plate_1" options="{'no_quick_create':True,'no_create_edit': True, 'no_open': True}"/>
                                    </div>
                                    <div class="o_row border border-info rounded">

                                        <div class="o_col px-2 ">
<!--                                            <div>123</div>-->
                                            <field name="plate_2" />
                                        </div>
                                        <div class="o_col">
<!--                                            <div>ن</div>-->
                                            <field name="plate_3" options="{'no_create_edit': True, 'no_open': True}"/>
                                        </div>
                                        <div class="o_col px-2 ">
<!--                                            <div>45</div>-->
                                            <field name="plate_4" />
                                        </div>
                                        <div class="o_col text-300" style="background-color: #10109f; align-self: center;">IR</div>
                                    </div>
                                </div>
                                </group>
                                <group>
                                <field name="front_container" />
                                <field name="middle_container" />
                                <field name="back_container" />
                                <field name="total" />
                                <field name="centralized_container" />
                            </group>
                        </group>
                        <notebook string="More Info" >
                            <page string="Loading">
                                <group>
                                    <field name="loading_no" />
                                    <field name="loading_date"/>
                                </group>
                            </page>
                            <page string="Loading Info">
                                <group>
                                    <group>
                                        <field name="loading_info_date" readonly="1"/>
                                        <field name="sp_gr" digits="[4,4]" readonly="1"/>
                                        <field name="correction_factor" readonly="1"/>
                                        <field name="temperature" readonly="1"/>
                                        <field name="temperature_f" readonly="1"/>
                                        <field name="pressure" readonly="1"/>
                                        <field name="pressure_psi" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="meter_no" readonly="1"/>
                                        <field name="weighbridge" readonly="1"/>
                                        <field name="totalizer_start" attrs="{'invisible': [('weighbridge', '=', 'yes')]}" readonly="1"/>
                                        <field name="totalizer_end" attrs="{'invisible': [('weighbridge', '=', 'yes')]}" readonly="1"/>
                                        <field name="totalizer_difference" attrs="{'invisible': [('weighbridge', '=', 'yes')]}" readonly="1"/>
                                        <field name="tanker_empty_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}" readonly="1"/>
                                        <field name="tanker_full_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}" readonly="1"/>
                                        <field name="tanker_pure_weight" attrs="{'invisible': [('weighbridge', '=', 'no')]}" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Lockers">
                                <group>
                                    <group>
                                        <field name="evacuation_box_seal"  readonly="1"/>
                                        <field name="compartment_1" readonly="1" />
                                        <field name="compartment_2" readonly="1" />
                                        <field name="compartment_3" readonly="1" />
                                    </group>
                                    <group>
<!--                                        <field name="api_box_locker" readonly="1"/>-->
<!--                                        <field name="compartment_locker_1" widget="many2one" readonly="1" />-->
<!--                                        <field name="compartment_locker_2" widget="many2one" readonly="1" />-->
<!--                                        <field name="compartment_locker_3" widget="many2one" readonly="1" />-->
                                    </group>
                                </group>
                            </page>
                            <page string="Params" groups="base.group_system">

                                <group>
                                    <group>
                                        <field name="api_a" groups="base.group_system"/>
                                        <field name="tab_13"  groups="base.group_system"/>
                                        <field name="ctl" groups="base.group_system"/>
                                        <field name="cpl" groups="base.group_system"/>

<!--                                        <field name="meter_tov_l" groups="base.group_system"/>-->
<!--                                        <field name="meter_gsv_l" groups="base.group_system"/>-->
<!--                                        <field name="meter_gsv_b" groups="base.group_system"/>-->
<!--                                        <field name="meter_mt" groups="base.group_system"/>-->

<!--                                        <field name="wb_tov_l" groups="base.group_system"/>-->
<!--                                        <field name="wb_gsv_l" groups="base.group_system"/>-->
<!--                                        <field name="wb_gsv_b" groups="base.group_system"/>-->
<!--                                        <field name="wb_mt" groups="base.group_system"/>-->

                                        <field name="final_tov_l" groups="base.group_system"/>
                                        <field name="final_gsv_l" groups="base.group_system"/>
                                        <field name="final_gsv_b" groups="base.group_system"/>
                                        <field name="final_mt" groups="base.group_system"/>

                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

