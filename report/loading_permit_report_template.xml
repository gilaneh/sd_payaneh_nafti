<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="loading_permit_report_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="container mt-2">
    <div class="container iransans_font">

    <div class="text-right" style="direction:rtl">
        <div class="text-center">
            <div>
                <img alt="Logo" t-att-src="'/logo?company=1'" t-att-alt="''"
                     style=" height: 150px;" height="150"/>
            </div>
            <div>شرکت ملی نفت ایران</div>
            <div>شرکت پایانه های نفتی ایران</div>
            <div>تاسیسات بارگیری زمینی میعانات گازی پارس جنوبی</div>
            <div class="h2 mt-2 mb-4">دستور بارگیری</div>

        </div>

        <div class="row border border-primary py-2">
            <div class="col-8">
                <div class="row">
                    <div class="col-4">
                        Buyer
                    </div>
                    <div class="" t-esc="input_record.buyer.buyer"> </div>

                </div>
            </div>
            <div class="col-4 ">
                <div class="row">
                    <div class="col-6">
                        Document No
                    </div>
                    <div class="col-6" t-esc="document_no">

                    </div>
                </div>
            </div>
        </div>

        <div class="row border border-primary">
            <div class="col-4  px-0">
                <div class="row border-bottom border-info   mx-0 py-2">
                    <div class="col-6" >
                        contractor name
                    </div>
                    <div class="col-6"  t-esc="input_record.buyer.contractor">

                    </div>
                </div>
                <div class="row border-bottom border-info   mx-0 py-2">
                    <div class="col-6">
                        Tanker No
                    </div>
                    <div class="col-6 p-0" >
                        <div class="row mx-0">

                            <div class="border border-secondary rounded p-1" t-esc="doc_data['tanker_no']['plate_1']"></div>
                            <div class="p-0">
                                <div class="row border border-secondary rounded mx-0 px-1">
                                    <div class="p-1" t-esc="doc_data['tanker_no']['plate_2']"></div>
                                    <div class="p-1" t-esc="doc_data['tanker_no']['plate_3']"></div>
                                    <div class="p-1" t-esc="doc_data['tanker_no']['plate_4']"></div>
                                </div>
                            </div>
                            <div class="border rounded bg-primary text-light" >IR</div>
                        </div>
                    </div>
                </div>
                <div class="row border-bottom border-info   mx-0 py-2">
                    <div class="col-6" >
                        Cargo Type
                    </div>
                    <div class="col-6"  t-esc="doc_data['cargo_type']">
                    </div>
                </div>
                <div class="col-12 text-center ">
                    <div class="h6">
                        نام و امضاء تهیه کننده
                    </div>
                    <div t-esc="doc_data['user_name']">

                    </div>
                    <div>

                    </div>

                </div>
            </div>

            <div class="col-4 border-left border-right border-primary p-0 ">
                <div class="row border-bottom border-info   mx-0 py-2">
                    <div class="col-6">
                        Contract No
                    </div>
                    <div class="col-6" t-esc="doc_data['contract_no']">
                    </div>
                </div>
                <div class="row border-bottom border-info   mx-0 py-2">
                    <div class="col-6">
                        Driver
                    </div>
                    <div class="col-6"  t-esc="doc_data['driver']">
                    </div>
                </div>
                <div class="row border-bottom border-info   mx-0 py-2">
                    <div class="col-6">
                        contract Type
                    </div>
                    <div class="col-6" t-esc="doc_data['contract_type']">
                    </div>
                </div>
                <div class="row mx-0">
                    <div class="col-3 align-self-center">
                        contract Type
                    </div>
                    <div class="col-9">
                        <div class="row border-bottom border-info  py-2">
                            <div class="col-6">
                                Front Container
                            </div>
                            <div class="col-6" t-esc="doc_data['front_container']">
                            </div>
                        </div>
                        <div class="row border-bottom border-info  py-2">
                            <div class="col-6">
                                Middle Container
                            </div>
                            <div class="col-6" t-esc="doc_data['middle_container']">
                            </div>
                        </div>
                        <div class="row border-bottom border-info  py-2">
                            <div class="col-6">
                                Back Container
                            </div>
                            <div class="col-6 " t-esc="doc_data['back_container']">
                            </div>
                        </div>
                        <div class="row border-bottom border-info  py-2">
                            <div class="col-6">
                                Total
                            </div>
                            <div class="col-6 bg-dark text-light h6 m-0" t-esc="doc_data['total']">
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-4  p-0 ">
                <div class="row border-bottom border-info   mx-0 py-2">
                    <div class="col-6">
                        Issue Date
                    </div>
                    <div class="col-6" t-esc="doc_data['issue_date']">

                    </div>
                </div>
                <div class="row border-bottom border-info   mx-0 py-2">
                    <div class="col-6">
                        Loading No
                    </div>
                    <div class="col-6" t-esc="doc_data['loading_no']">
                    </div>
                </div>
                <div class="col-12 text-center ">
                    <div class="h6">
                        تایید حراست ورودی
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
                    </div>
                    <div class="mb-5"></div>
                    <div class="mb-5"></div>
                </t>
            </t>
        </template>
    </data>
</odoo>
