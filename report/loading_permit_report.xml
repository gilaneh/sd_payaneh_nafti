<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="loading_permit_report_a4" model="report.paperformat">
    <field name="name">Loading Permit A4 Landscape</field>
    <field name="default" eval="True"/>
    <field name="format">custom</field>
    <field name="page_height">297</field>
    <field name="page_width">210</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">10</field>
    <field name="margin_bottom">5</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">3</field>
    <field name="dpi">100</field>
</record>
    <record id="loading_permit_report_a5" model="report.paperformat">
    <field name="name">Loading Permit A5</field>
    <field name="default" eval="True"/>
    <field name="format">custom</field>
    <field name="page_height">148</field>
    <field name="page_width">210</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">10</field>
    <field name="margin_bottom">5</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">8</field>
    <field name="dpi">100</field>
</record>
    <record id="loading_permit_report" model="ir.actions.report">
        <field name="name">Loading Permit</field>
        <field name="model">sd_payaneh_nafti.input_info</field>
<!--        <field name="report_type">qweb-html</field>-->
<!--        <field name="report_type">xlsx</field>-->
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sd_payaneh_nafti.loading_permit_report_template</field>
        <field name="report_file">sd_payaneh_nafti.loading_permit_report_template</field>
        <field name="print_report_name">'LoadingPermit-%s' % object.document_no </field>
        <field name="paperformat_id" ref="loading_permit_report_a5"/>
        <field name="binding_model_id" ref="model_sd_payaneh_nafti_input_info"/>
        <field name="binding_type">report</field>

    </record>

</odoo>
